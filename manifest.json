{
  "manifest_version": 3,
  "name": "Lifetiles",
  "version": "1.0.1",
  "description": "Organize your life with customizable tiles and projects",
  "permissions": [
    "tabs",
    "bookmarks"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "icons": {
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}