{
  "manifest_version": 3,
  "name": "LinkTiles",
  "version": "1.0.4",
  "description": "Organize your bookmarks in a tile-based dashboard",
  "permissions": ["tabs", "bookmarks", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkTiles"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "save-current-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save current tab to Quick Save"
    },
    "open-quick-save": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "Save current tab to a project..."
    },
    "open-dashboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+O"
      },
      "description": "Open LinkTiles"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
